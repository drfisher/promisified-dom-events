{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"diagnostics": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"outDir": "./dist",
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"lib": ["es2015", "dom"]
	},
	"files": [
		"src/promisifiedDomEvents.ts"
	],
	"exclude": [
		"node_modules"
	]
}